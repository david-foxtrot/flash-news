// --- Code Fence (JavaScript) ---

// 1. Usamos el método moderno 'import.meta.glob' para encontrar todos los archivos.
// Esta es la forma recomendada y más robusta en Astro.
const newsImports = import.meta.glob('../../content/news/*.json');

// 2. 'import.meta.glob' devuelve un objeto de funciones que debemos ejecutar
// para obtener el contenido real de cada archivo. Usamos Promise.all para hacerlo.
const newsPromises = Object.values(newsImports).map(importer => importer());
const allNewsObjects = await Promise.all(newsPromises);

// 3. El contenido real de cada JSON está en la propiedad 'default' de lo que importamos.
// Creamos una lista limpia con solo el contenido que nos interesa.
const allNews = allNewsObjects.map(item => item.default || item);

// --- PASO DE DEPURACIÓN (Opcional, puedes borrarlo después) ---
console.log(`[DEBUG] Archivos de noticias procesados: ${allNews.length}`);
if (allNews.length > 0) {
  console.log('[DEBUG] Estructura de la primera noticia:', JSON.stringify(allNews[0]));
}
// -------------------------------------------------------------

// 4. Ordenamos las noticias del más nuevo al más viejo usando su 'id'.
const sortedNews = allNews.sort((a, b) => {
  if (a.id && b.id) {
    return b.id.localeCompare(a.id);
  }
  return 0;
});
---
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <title>Flash News Feed</title>
</head>
<body>
  <main>
    <h1>Flash News Feed</h1>
    <div class="feed-container">
      {sortedNews.map(news => (
        <a href={news.source_url} target="_blank" rel="noopener noreferrer" class="news-card">
          <div class="card-header">
            <span class="flags">{news.flags}</span>
            <span class="keyword">{news.keyword}</span>
          </div>
          <p class="sentence">{news.sentence1}</p>
          <p class="sentence">{news.sentence2}</p>
        </a >
      ))}
    </div>
  </main>
</body>
</html>

